<style>
    @media screen and (max-width: 768px) {
        .login {
            margin-top: -50px;
            width: 80%;
        }

        .container {
            margin-bottom: -150px;
        }
    }

    @media screen and (min-width: 768px) {
        .message-success {
            margin-top: 0;
        }
        
        .login {
            margin-top: -2.5px;
            height: 450px;
        }

        .container {
            margin-bottom: -65px;
        }

        .login input[type=submit] {
            height: 50px;
        }
    }
</style>

<style>
    html {
        background: linear-gradient(to top, rgb(118,171,223), white);
        background-repeat: repeat-y;

        height: 122vh;
    }
</style>

{{#if message}}
    <div class="message-success" style="background-color: rgb(239,173,77);">
        {{message}}
    </div>

    <style>
         @media screen and (max-width: 768px) {
            .message-success {
                margin-top: 25px;
            }

            .login {
                margin-top: -105px;
            }

            .container {
                margin-bottom: -125px;
            }
         }
    </style>
{{/if}}

{{#if error}}
    <div class="message-success" style="background-color: rgb(217,84,79);">
        {{error}}
    </div>

    <style>
         @media screen and (max-width: 768px) {
            .message-success {
                margin-top: 25px;
            }

            .login {
                margin-top: -105px;
            }

            .container {
                margin-bottom: -125px;
            }
         }
    </style>
{{/if}}

{{#if already}}
    <div class="message-success" style="background-color: rgb(239,173,77);">
        {{already}}
    </div>

    <style>
         @media screen and (max-width: 768px) {
            .message-success {
                margin-top: 25px;
            }

            .login {
                margin-top: -180px;
            }

            .container {
                margin-bottom: -235px;
            }
         }
    </style>
{{/if}}

<style>
    .senha {
        display: flex;
        flex-direction: row;

        align-items: center;
        justify-content: space-evenly;

        width: 80%;
    }
</style>

<br><br>
<div class="container">
    <form class="login" method="post">
        <h1>Registrar</h1><hr style="width: 100%;"><br>
        <label for="email">Usuário</label><br>
            <input placeholder="Digite seu usuário" type="text" name="usuario" required><br><br>
        <label for="email">E-mail</label><br>
            <input placeholder="Digite seu e-mail" type="email" name="email" required><br><br>

        <div class="senha">
            <label for="senha">Senha</label>
        </div><br>

        <div class="senha">
            <input placeholder="Digite sua senha" type="password" name="senha" required>

            &nbsp;&nbsp;&nbsp;&nbsp;

            <input placeholder="Confirme sua senha" type="password" name="csenha" required>
        </div><br><br>

        <input type="submit" value="Entrar">
    </form>
</div>